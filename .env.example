# Database configuration (PostgreSQL via Docker)
# NOTA: Porta 5433 (custom per evitare conflitti con altri progetti)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/influencerai

# API server
PORT=3001
NODE_ENV=development
LOG_LEVEL=debug
LOGGER_PRETTY=1

# Redis configuration (via Docker)
# NOTA: Porta 6380 (custom per evitare conflitti con altri progetti)
REDIS_URL=redis://localhost:6380
REDIS_HOST=localhost
REDIS_PORT=6380
BULL_PREFIX=bull
DISABLE_BULL=0
WORKER_JOB_ATTEMPTS=3
WORKER_JOB_BACKOFF_DELAY_MS=5000

# MinIO S3-compatible storage (via Docker)
S3_ENDPOINT=http://localhost:9000
S3_KEY=minio
S3_SECRET=minio12345
S3_BUCKET=assets
AWS_REGION=us-east-1
SKIP_S3_INIT=0

# OpenRouter API key (REQUIRED - get yours at https://openrouter.ai/keys)
# This is the only paid external service - keep this secret!
OPENROUTER_API_KEY=your_api_key_here

# OpenRouter call tuning (optional)
# OPENROUTER_TIMEOUT_MS=60000
# OPENROUTER_MAX_RETRIES=3
# OPENROUTER_BACKOFF_BASE_MS=250
# OPENROUTER_BACKOFF_JITTER_MS=100

# Authentication
JWT_SECRET=dev_jwt_secret_change_me

# Webhook security (used by n8n pipeline callbacks)
# Set PIPELINE_WEBHOOK_SECRET to a random string and keep it private.
# Optionally set WEBHOOK_HMAC_SECRET if you plan to sign webhook payloads with HMAC.
PIPELINE_WEBHOOK_SECRET=your_pipeline_webhook_secret
# WEBHOOK_HMAC_SECRET=your_hmac_secret
