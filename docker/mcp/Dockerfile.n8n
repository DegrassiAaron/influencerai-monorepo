# Dockerfile for n8n Workflow MCP Server
FROM node:20-alpine

WORKDIR /app

# Install the n8n MCP server
RUN npm install -g n8n-mcp

# Use existing node user (UID/GID 1000)
RUN mkdir -p /tmp && \
    chown -R node:node /tmp

USER node

# The server will be started via docker-compose command
CMD ["npx", "-y", "n8n-mcp"]
