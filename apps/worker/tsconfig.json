{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["node", "vitest"],
    "paths": {
      "@influencerai/core-schemas": ["../../packages/core-schemas/dist"],
      "@influencerai/sdk": ["../../packages/sdk/dist"],
      "@influencerai/prompts": ["../../packages/prompts/dist"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
